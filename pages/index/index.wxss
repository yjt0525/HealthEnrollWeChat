/**index.wxss**/
.shopinfo{
  height:100%;
}

.shopinfo .top{
  overflow: hidden;
  border-bottom:1px dashed #eee;
  padding-bottom:20rpx;
  padding:40rpx;
}

.shopinfo .top .left{
  width:80%;
  float:left;
}

.shopinfo .top .left .name{
  font-size:40rpx;
}

.shopinfo .top .left .tip{
  font-size:28rpx;
  color:#999;
  margin-top:20rpx;
}

.shopinfo .top .right{
  width:20%;
  float:right;
}

.shopinfo .top .right image{
  width:100%;
  height:100rpx;
}

.shopinfo .middle{
   padding:0 40rpx 0 10rpx; 
}

.shopinfo .middle .line{
  height:60rpx;
  line-height: 60rpx;
  font-size:28rpx;
  color:#555;
  margin:20rpx 0;
}

.shopinfo .middle .line .icon{
  float:left;
  width:60rpx;
  height:100%;
  margin-right:60rpx;
}

.shopinfo .middle .line .icon image{
  width:100%;
  height:100%;
}

.shopinfo .middle .line .content{
  float:left;
}
.shopinfo .middle .line .arrow{
  float:right;
  width:60rpx;
  height:100%;
}

.shopinfo .middle .line .arrow image{
  width:100%;
  height:100%;
}

.shopinfo .bottom{
  margin-bottom:40rpx;
}

.shopinfo .bottom image{
  display: block;
  width:48%;
  height:400rpx;
  margin:1%;
  float: left;
}
